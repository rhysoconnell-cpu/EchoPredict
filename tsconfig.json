{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "es2020"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["app/**/*", "components/**/*", "pages/**/*", "next-env.d.ts"]
}
